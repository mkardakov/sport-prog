<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{ form_start(userExerciseForm, {'action': path('user_exercise_new')}) }}
            <div class="modal-body">
                {{ form_row(userExerciseForm.weight) }}
                {{ form_row(userExerciseForm.repetition) }}
                {{ form_row(userExerciseForm.setTotal) }}
                {{ form_row(userExerciseForm.exercise) }}
                {{ form_widget(userExerciseForm.program,
                    {'attr' : {"style": 'display: none' }}
                ) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="add-exercise">Save</button>
            </div>
            {{ form_end(userExerciseForm) }}
        </div>
    </div>
</div>